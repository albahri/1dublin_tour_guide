<p id="notice"><%= notice %></p>

<h1>Listing Posts </h1>
<table>
  <thead>
    <tr>
      <th>Post message</th>
      <th>Guide</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_message %></td>
        <td><%= link_to 'Show', guide_post_path(@guide, post) %></td>
        <td><%= link_to 'Edit', edit_guide_post_path(@guide, post) %></td>
        <td><%= link_to 'Destroy', guide_post_path(@guide, post), :confirm => 'Are you sure ?', :method => :delete %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_guide_post_path(@guide) %>
<%= link_to 'Back to Guide', @guide %>
